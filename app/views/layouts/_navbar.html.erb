<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand fs-4 text-dark" href="<%= root_path %>" style="font-family: 'Lora', serif; font-weight: bold; letter-spacing: 1px;">
      <i class="bi bi-clipboard-check"></i> TaskMaster
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">
            <i class="bi bi-house-door"></i> Dashboard
          </a>
        </li>

        <!-- Search Bar -->
        <li class="nav-item ms-3">
          <form class="d-flex" action="<%= tasks_path %>" method="get">
            <div class="input-group">
              <input id="search-input" class="form-control rounded-pill border-0 px-3" type="search" name="search" placeholder="Search tasks..." aria-label="Search" style="max-width: 180px;">
              <button class="btn btn-outline-primary rounded-pill" type="submit">
                <i class="bi bi-search"></i>
              </button>
            </div>
          </form>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">
            <i class="bi bi-gear"></i> Settings
          </a>
        </li>

        <% if user_signed_in? %>
          <!-- Show Logout Button if User is Logged In -->
          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger ms-3" do %>
              <i class="bi bi-box-arrow-right"></i> Logout
            <% end %>
          </li>
        <% else %>
          <!-- Show Login Button if User is Logged Out -->
          <% unless request.path == new_user_session_path %> <!-- Hide Login Button on Login Page -->
            <li class="nav-item">
              <a class="btn btn-outline-success ms-3" href="<%= new_user_session_path %>">
                <i class="bi bi-box-arrow-in-right"></i> Login
              </a>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
