<body class="forgot-password">
  <div class="navbar">
    <a href="/" class="navbar-brand text-white">MyApp</a>
  </div>

  <div class="d-flex justify-content-center align-items-start bg-light" style="min-height: 100vh; padding-top: 20px;"> <!-- Adjust padding-top to move content up -->
    <div class="card shadow-lg p-4 border-0 rounded-4" style="width: 400px; background: #ffffff;">
      <div class="text-center mb-3">
        <i class="bi bi-lock-fill text-danger" style="font-size: 3rem;"></i>
        <h3 class="fw-bold text-dark">Forgot Password?</h3>
        <p class="text-muted">Enter your email to reset your password</p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, "Email Address", class: "form-label fw-bold text-dark" %>
          <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
          </div>
        </div>

        <div class="d-grid">
          <%= f.submit "Send Reset Instructions", class: "btn btn-danger btn-lg shadow-sm fw-bold" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "Back to Login", new_session_path(resource_name), class: "text-decoration-none text-primary fw-bold" %>
      </div>
    </div>
  </div>
</body>

